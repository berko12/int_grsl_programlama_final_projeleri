@model Okul_Idare_Sistemi.Models.Ders
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ders Ekleme</h1>

<div class="row">
    <div class="col-sm-6 text-black">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-outline mb-4">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control form-control-lg" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-outline mb-4">
                <label asp-for="Kredisi" class="control-label"></label>
                <input asp-for="Kredisi"  class="form-control form-control-lg" />
                <span asp-validation-for="Kredisi" class="text-danger"></span>
            </div>
           <div class="form-group">
               <label  class="control-label">Okul yönetimi</label>
                @Html.DropDownListFor(x => x.OkulYonetim.Id, (List<SelectListItem>)ViewBag.Item  , htmlAttributes: new { @class = "form-control", required = String.Empty })
               <span asp-validation-for="OkulYonetimId" class="text-danger"></span>                     
            </div>
            

            <div class="col-sm-6 px-0 d-none d-sm-block">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#eventCreateForm").validate();
    </script>
}